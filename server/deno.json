{
  "nodeModulesDir": "auto",
  "tasks": {
    "dev": "deno run -A --watch main.ts",
    "start": "deno run -A --env main.ts",
    "build": "deno compile -A --target x86_64-pc-windows-msvc main.ts",
    "test": "deno test -A --env",
    "migrate": "deno run -A --env scripts/migrate.ts",
    "db:push": "deno run -A --env scripts/db-push.ts",
    "db:generate": "deno run -A --env scripts/db-generate.ts"
  },
  "imports": {
    "@oak/oak": "jsr:@oak/oak@^17.1.6",
    "@std/log": "jsr:@std/log@^0.224.9",
    "@std/assert": "jsr:@std/assert@^1.0.8",
    "@std/uuid": "jsr:@std/uuid@^1.0.4",
    "prisma": "https://deno.land/x/prisma@5.19.1/mod.ts"
  }
}
